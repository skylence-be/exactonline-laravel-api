{
  "entity": "Account",
  "endpoint": "crm/Accounts",
  "fields": {
    "ID": { "type": "guid", "readOnly": true },
    "Code": { "type": "string", "maxLength": 18 },
    "Name": { "type": "string", "required": true, "maxLength": 50 },
    "Status": { "type": "string", "maxLength": 1, "enum": ["A", "S", "P", "C"] },
    "Type": { "type": "string", "maxLength": 1, "enum": ["A", "D"] },
    "AddressLine1": { "type": "string", "maxLength": 60 },
    "AddressLine2": { "type": "string", "maxLength": 60 },
    "AddressLine3": { "type": "string", "maxLength": 60 },
    "City": { "type": "string", "maxLength": 40 },
    "Postcode": { "type": "string", "maxLength": 20 },
    "State": { "type": "string", "maxLength": 40 },
    "Country": { "type": "string", "maxLength": 2 },
    "Phone": { "type": "string", "maxLength": 17 },
    "PhoneExtension": { "type": "string", "maxLength": 10 },
    "Fax": { "type": "string", "maxLength": 17 },
    "Email": { "type": "string", "format": "email", "maxLength": 100 },
    "Website": { "type": "string", "format": "url", "maxLength": 200 },
    "VATNumber": { "type": "string", "maxLength": 20 },
    "ChamberOfCommerce": { "type": "string", "maxLength": 40 },
    "SearchCode": { "type": "string", "maxLength": 30 },
    "IsSales": { "type": "boolean" },
    "IsSupplier": { "type": "boolean" },
    "IsReseller": { "type": "boolean" },
    "IsCompetitor": { "type": "byte" },
    "IsAgency": { "type": "byte" },
    "IsMailing": { "type": "byte" },
    "Blocked": { "type": "boolean" },
    "AccountManager": { "type": "guid" },
    "Accountant": { "type": "guid" },
    "Parent": { "type": "guid" },
    "InvoiceAccount": { "type": "guid" },
    "MainContact": { "type": "guid" },
    "Reseller": { "type": "guid" },
    "PriceList": { "type": "guid" },
    "SalesCurrency": { "type": "string", "maxLength": 3 },
    "PurchaseCurrency": { "type": "string", "maxLength": 3 },
    "PaymentConditionSales": { "type": "string", "maxLength": 10 },
    "PaymentConditionPurchase": { "type": "string", "maxLength": 10 },
    "SalesVATCode": { "type": "string", "maxLength": 3 },
    "PurchaseVATCode": { "type": "string", "maxLength": 3 },
    "GLAccountSales": { "type": "guid" },
    "GLAccountPurchase": { "type": "guid" },
    "GLAR": { "type": "guid" },
    "GLAP": { "type": "guid" },
    "CreditLineSales": { "type": "double" },
    "CreditLinePurchase": { "type": "double" },
    "DiscountSales": { "type": "double", "min": 0, "max": 1 },
    "DiscountPurchase": { "type": "double", "min": 0, "max": 1 },
    "ShippingMethod": { "type": "guid" },
    "Language": { "type": "string", "maxLength": 2 },
    "Remarks": { "type": "string" },
    "Division": { "type": "int32", "readOnly": true },
    "Created": { "type": "datetime", "readOnly": true },
    "Creator": { "type": "guid", "readOnly": true },
    "Modified": { "type": "datetime", "readOnly": true },
    "Modifier": { "type": "guid", "readOnly": true }
  }
}
